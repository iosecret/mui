{
  "compilerOptions": {
    "sourceMap": false,
    "importHelpers": true,
    "declaration": true,
    "module": "ES2015",
    "outDir": "dist/",
    "baseUrl": ".",
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "suppressImplicitAnyIndexErrors": true,
    "downlevelIteration": true,
  },
  "include": ["./lib", "./lib/**/*.css"]
}